<div class="container">
  <h1 class="text-center">My list of restaurants</h1>
  <div class="row" style=" margin-top: 30px;">
    <% @restaurants.each do |restaurant| %>
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail text-center">
        <img src="https://images.unsplash.com/photo-1492683962492-deef0ec456c0?ixlib=rb-0.3.5&s=ff25ea457a0074fecce9263137ae2234&auto=format&fit=crop&w=1476&q=80" alt="...">
        <div class="caption">
          <h3><%= link_to restaurant.name, restaurant_path(restaurant) %></h3>
          <p><%= restaurant.category %></p>
          <p><%= link_to "Discover", restaurant_path(restaurant), class: 'btn btn-primary'%></p>
        </div>
      </div>
    </div>
    <% end %>
  </div>

<div class="row">
  <div class="col-sm-12">
    <div class="text-center">
      <%= link_to new_restaurant_path, class: 'btn btn-primary btn-lg clearfix' do %>
        <i class="fas fa-plus"></i>
        Add a new restaurant
      <% end %>
     <hr>
    </div>
  </div>
</div>


